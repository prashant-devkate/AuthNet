@model IEnumerable<AuthNet.UI.Models.DTO.CategoryDto>
@{
    ViewData["Title"] = "Categories";
}

<!-- Custom CSS for Badges (adapted for Categories) -->
<style>
    .badge-order-status {
        background-color: #ebedef;
        color: #3a3b45;
        font-weight: 500;
    }
</style>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-tags me-2"></i> Categories</h1>
    <a asp-controller="Categories" asp-action="Add" class="d-none d-sm-inline-block btn btn-primary btn-icon-split btn-sm shadow-sm">
        <span class="icon text-white-50">
            <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text">Add Category</span>
    </a>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Categories List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@c.Name</td>
                                        <td class="text-muted">@c.Description</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-warning btn-icon-split btn-sm me-1">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </span>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@c.CategoryId"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Delete this category?');">
                                                <button class="btn btn-danger btn-icon-split btn-sm">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-trash"></i>
                                                    </span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No categories found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "columnDefs": [
                    { "orderable": false, "targets": 2 }
                ]
            });
        });
    </script>
}