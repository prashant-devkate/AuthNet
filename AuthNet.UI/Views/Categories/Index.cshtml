@model IEnumerable<AuthNet.UI.Models.DTO.CategoryDto>
@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary mb-0">
        <i class="bi bi-tags me-2"></i> Categories
    </h3>
    <a asp-controller="Categories" asp-action="Add" class="btn btn-primary rounded-3">
        <i class="bi bi-plus-circle me-1"></i> Add Category
    </a>
</div>

<div class="card shadow-sm p-3">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-center" style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-semibold">@c.Name</td>
                        <td class="text-muted">@c.Description</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-sm btn-outline-warning me-1 rounded-2">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@c.CategoryId"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this category?');">
                                <button class="btn btn-sm btn-outline-danger rounded-2">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
