@model IEnumerable<AuthNet.UI.Models.DTO.CategoryDto>
@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <!-- Page header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="h4 mb-0">Categories</h2>
        </div>
        <div class="col-auto">
            <a asp-controller="Categories" asp-action="Add" class="btn btn-primary d-flex align-items-center gap-1">
                <i class="bi bi-plus-circle"></i>
                <span>Add Category</span>
            </a>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center" style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@c.Name</td>
                            <td class="text-muted">@c.Description</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@c.CategoryId"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@c.CategoryId"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this category?');">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
