@using AuthNet.UI.Models.DTO
@model AddCompanyInfoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Company Info";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card o-hidden border-0 shadow-lg my-4">
                <div class="card-body p-0">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-3"><i class="bi bi-building me-1" aria-hidden="true"></i> Add Company Information</h1>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <form class="user" asp-action="Add" enctype="multipart/form-data" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input asp-for="Name" class="form-control form-control-user" placeholder="Enter Company Name...">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="Address" rows="3" class="form-control form-control-user" placeholder="Enter Address..."></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-user" placeholder="Enter Email...">
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-2 mb-sm-0">
                                    <input asp-for="ContactNumber" type="tel" class="form-control form-control-user" placeholder="Enter Contact Number...">
                                    <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="GSTIN" class="form-control form-control-user" placeholder="Enter GSTIN...">
                                    <span asp-validation-for="GSTIN" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="LogoUrl" class="form-label">Logo</label>
                                <input asp-for="LogoUrl" type="file" class="form-control">
                                <span asp-validation-for="LogoUrl" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SignatureUrl" class="form-label">Signature</label>
                                <input asp-for="SignatureUrl" type="file" class="form-control">
                                <span asp-validation-for="SignatureUrl" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-user btn-block" type="submit">Save</button>
                                <a asp-action="Index" class="btn btn-secondary btn-user btn-block">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}