@model AuthNet.UI.Models.DTO.EditCustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}

@if (Model != null)
{
    <div class="container py-4" style="max-width:540px">
        <div class="card shadow-sm border-0">
            <div class="card-body p-3">
                <h4 class="text-center text-primary fw-semibold mb-3">
                    <i class="bi bi-pencil-square me-1"></i> Edit Customer
                </h4>

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                        <input asp-for="CustomerId" hidden />

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Phone" class="form-control" />
                        <label asp-for="Phone"></label>
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Address" class="form-control" />
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button class="btn btn-primary px-4" type="submit">Save</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
