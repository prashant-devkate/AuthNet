@model AuthNet.UI.Models.DTO.EmailSendViewModel
@using AuthNet.UI.Enums

@{
    ViewData["Title"] = "Send Email";
}

<div class="container mt-4">
    <h3>📧 Send Email via Template</h3>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="Send" method="post">
        <div class="mb-3">
            <label asp-for="FromEmail" class="form-label">From Email</label>
            <input asp-for="FromEmail" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="FromName" class="form-label">From Name</label>
            <input asp-for="FromName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ToEmails" class="form-label">To Email(s) (comma-separated)</label>
            <input asp-for="ToEmails" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Subject" class="form-label">Subject</label>
            <input asp-for="Subject" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SelectedTemplate" class="form-label">Template</label>
            <select asp-for="SelectedTemplate" class="form-select" asp-items="Html.GetEnumSelectList<EmailTemplates>()">
                <option value="">-- Select Template --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="KeyValuePairs" class="form-label">Key-Value Replacements (e.g. Name|John,Link|https://...)</label>
            <input asp-for="KeyValuePairs" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Send Email</button>
    </form>
</div>
