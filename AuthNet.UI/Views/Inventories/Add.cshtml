@model AuthNet.UI.Models.DTO.AddInventoryViewModel
@{
    ViewData["Title"] = "Add Inventory";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card o-hidden border-0 shadow-lg my-4">
                <div class="card-body p-0">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-3"><i class="fas fa-tags me-1"></i> Add Inventory</h1>
                        </div>

                        @if (ViewBag.NoProductsMessage != null)
                        {
                            <div class="alert alert-warning text-center" role="alert">
                                @ViewBag.NoProductsMessage
                            </div>
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-secondary btn-user btn-block">Back to List</a>
                            </div>
                        }
                        else
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <form class="user" asp-action="Add" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control">
                                        <option value="" >-- Select Product --</option>
                                    </select>
                                    <span asp-validation-for="ProductId" class="text-danger small"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-2 mb-sm-0">
                                        <input asp-for="QuantityInStock" class="form-control form-control-user" placeholder="Enter Quantity in Stock...">
                                        <span asp-validation-for="QuantityInStock" class="text-danger small"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="ReorderLevel" class="form-control form-control-user" placeholder="Enter Reorder Level...">
                                        <span asp-validation-for="ReorderLevel" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-user btn-block" type="submit">Save</button>
                                    <a asp-action="Index" class="btn btn-secondary btn-user btn-block">Cancel</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}