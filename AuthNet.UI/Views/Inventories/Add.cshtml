@model AuthNet.UI.Models.DTO.AddInventoryViewModel

@{
    ViewData["Title"] = "Add Inventory";
}

<div class="container py-4" style="max-width:540px">
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <h4 class="text-center text-primary fw-semibold mb-3">
                <i class="bi bi-tags me-1"></i> Add Inventory
            </h4>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <form asp-action="Add" method="post">
                @Html.AntiForgeryToken()

                <div class="form-floating mb-2">
                    <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-select">
                        <option value="">-- Select Product --</option>
                    </select>
                    <label asp-for="ProductId"></label>
                    <span asp-validation-for="ProductId" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="QuantityInStock" class="form-control" placeholder="Quantity in stock" />
                    <label asp-for="QuantityInStock"></label>
                    <span asp-validation-for="QuantityInStock" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ReorderLevel" class="form-control" placeholder="Reorder level" />
                    <label asp-for="ReorderLevel"></label>
                    <span asp-validation-for="ReorderLevel" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button class="btn btn-primary px-4" type="submit">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
