@model IEnumerable<AuthNet.UI.Models.DTO.InventoryDto>
@{
    ViewData["Title"] = "Inventory";
}

<!-- Custom CSS for Badges -->
<style>
    .badge-product-code {
        background-color: #ebedef; /* Light gray from SB Admin 2 */
        color: #3a3b45; /* Dark gray from SB Admin 2 for contrast */
        font-weight: 500; /* Slightly bolder for readability */
    }

    .badge-success {
        background-color: #1cc88a; /* Success green from SB Admin 2 */
        color: #ffffff; /* White text for contrast */
        font-weight: 500;
    }
</style>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><i class="fas me-2"></i> Inventory</h1>
    <a asp-controller="Inventories" asp-action="Add" class="d-none d-sm-inline-block btn btn-primary btn-icon-split btn-sm shadow-sm">
        <span class="icon text-white-50">
            <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text">Add Inventory</span>
    </a>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Inventory List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Reorder Level</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Reorder Level</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var inventory in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@inventory.ProductName</td>
                                        <td class="text-muted">@inventory.QuantityInStock</td>
                                        <td class="text-muted">@inventory.ReorderLevel</td>
                                        <td>
                                            @if (inventory.QuantityInStock <= inventory.ReorderLevel)
                                            {
                                                <span class="badge badge-product-code">
                                                    <i class="fas fa-exclamation-circle"></i> Low Stock
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success">OK</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@inventory.InventoryId" class="btn btn-warning btn-icon-split btn-sm me-1">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </span>
                                              
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@inventory.InventoryId"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Delete this inventory record?');">
                                                <button class="btn btn-danger btn-icon-split btn-sm">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-trash"></i>
                                                    </span>
                                                   
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "columnDefs": [
                    { "orderable": false, "targets": 4 } // Disable sorting on Actions column
                ]
            });
        });
    </script>
}