@model AuthNet.UI.Models.DTO.AddOrderViewModel

@{
    ViewData["Title"] = "Add Order";
}

<div class="container py-4" style="max-width:540px">
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <h4 class="text-center text-primary fw-semibold mb-3">
                <i class="bi bi-cart-plus me-1"></i> Add Order
            </h4>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <form asp-action="Add" method="post">
                @Html.AntiForgeryToken()

                <div class="form-floating mb-3">
                    <input asp-for="OrderDate" class="form-control" placeholder="Order Date" />
                    <label asp-for="OrderDate"></label>
                    <span asp-validation-for="OrderDate" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="TotalAmount" class="form-control" placeholder="Total Amount" />
                    <label asp-for="TotalAmount"></label>
                    <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                        <option value="">-- Select Customer --</option>
                    </select>
                    <label asp-for="CustomerId"></label>
                    <span asp-validation-for="CustomerId" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <label asp-for="UserId"></label>
                    <span asp-validation-for="UserId" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button class="btn btn-primary px-4" type="submit">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
