@model AuthNet.UI.Models.DTO.EditProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}


@if (Model != null)
{
        <div class="container py-4" style="max-width:540px">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <h4 class="text-center text-primary fw-semibold mb-3">
                        <i class="bi bi-box-seam me-1"></i> Edit Product
                    </h4>
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
        <form method="post" asp-action="Edit">
            @Html.AntiForgeryToken()

            <div class="form-floating mb-2">
                <input asp-for="ProductId" class="form-control" readonly />
                <label asp-for="ProductId">Product ID</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Description" class="form-control" />
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="row g-2 mb-2">
                <div class="col-6 form-floating">
                    <input asp-for="Price" class="form-control" />
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="col-6 form-floating">
                    <input asp-for="HotKey" class="form-control" maxlength="1" />
                    <label asp-for="HotKey"></label>
                    <span asp-validation-for="HotKey" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="ProductCode" class="form-control" />
                <label asp-for="ProductCode"></label>
                <span asp-validation-for="ProductCode" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-2">
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <label asp-for="CategoryId"></label>
                <span asp-validation-for="CategoryId" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-select">
                    <option value="">-- Select Supplier --</option>
                </select>
                <label asp-for="SupplierId"></label>
                <span asp-validation-for="SupplierId" class="text-danger small"></span>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <button class="btn btn-primary px-4" type="submit">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>
            </form>
        </div>
    </div>
</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}