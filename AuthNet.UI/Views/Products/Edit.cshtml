@using AuthNet.UI.Models.DTO
@model EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card o-hidden border-0 shadow-lg my-4">
                <div class="card-body p-0">
                    <div class="p-4">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-3"><i class="fas fa-boxes me-1"></i> Edit Product</h1>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <form class="user" asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <input asp-for="ProductId" hidden />
                            <div class="form-group">
                                <input asp-for="Name" class="form-control form-control-user" placeholder="Enter Product Name...">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Description" class="form-control form-control-user" placeholder="Enter Description...">
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-2 mb-sm-0">
                                    <input asp-for="CostPrice" class="form-control form-control-user" placeholder="Enter Cost Price...">
                                    <span asp-validation-for="CostPrice" class="text-danger small"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="SellPrice" class="form-control form-control-user" placeholder="Enter Sell Price...">
                                    <span asp-validation-for="SellPrice" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-2 mb-sm-0">
                                    <input asp-for="ProductKey" class="form-control form-control-user" placeholder="Enter Product Key...">
                                    <span asp-validation-for="ProductKey" class="text-danger small"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="ProductCode" class="form-control form-control-user" placeholder="Enter Product Code...">
                                    <span asp-validation-for="ProductCode" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-control">
                                    <option value="">-- Select Supplier --</option>
                                </select>
                                <span asp-validation-for="SupplierId" class="text-danger small"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-user btn-block" type="submit">Save</button>
                                <a asp-action="Index" class="btn btn-secondary btn-user btn-block">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}