@model AuthNet.UI.Models.DTO.ProductListViewModel
@{
    ViewData["Title"] = "Products";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Products</h1>
    <a asp-controller="Products" asp-action="Add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus-circle fa-sm text-white-50"></i> Add Product
    </a>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price (₹)</th>
                                <th>Hot Key</th>
                                <th>Code</th>
                                <th>Category</th>
                                <th>Supplier</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Products.Any())
                            {
                                @foreach (var p in Model.Products)
                                {
                                    <tr>
                                        <td class="font-weight-bold">@p.Name</td>
                                        <td class="text-gray-600">@p.Description</td>
                                        <td>₹@p.Price</td>
                                        <td class="text-gray-600">@p.HotKey</td>
                                        <td><span class="badge badge-secondary">@p.ProductCode</span></td>
                                        <td>@p.CategoryId</td>
                                        <td>@p.SupplierId</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-sm btn-warning btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </span>
                                                <span class="text">Edit</span>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@p.ProductId" method="post" class="d-inline" onsubmit="return confirm('Delete this product?');">
                                                <button class="btn btn-sm btn-danger btn-icon-split">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-trash"></i>
                                                    </span>
                                                    <span class="text">Delete</span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-gray-500 py-4">
                                        <i class="fas fa-info-circle fa-2x text-gray-300 mr-2"></i>No products found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination pagination-sm justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
                </li>
            }
        </ul>
    </nav>
}

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "paging": false, // Disable DataTables paging since we have custom pagination
                "ordering": true,
                "info": false
            });
        });
    </script>
}