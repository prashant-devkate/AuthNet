@model AuthNet.UI.Models.DTO.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle display-4 text-primary mb-3"></i>
                    <h4 class="card-title mb-3">My Profile</h4>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-start">Username</dt>
                        <dd class="col-sm-8 text-start">@Model.Username</dd>

                        <dt class="col-sm-4 fw-semibold text-start">Role</dt>
                        <dd class="col-sm-8 text-start">@Model.Role</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
