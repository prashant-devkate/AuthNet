@model IEnumerable<AuthNet.UI.Models.DTO.PurchaseOrderDto>
@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary mb-0">
        <i class="bi bi-bag-check me-2"></i> Purchase Orders
    </h3>
    <a asp-controller="PurchaseOrders" asp-action="Add" class="btn btn-primary rounded-3">
        <i class="bi bi-plus-circle me-1"></i> Add Purchase Order
    </a>
</div>

<div class="card shadow-sm p-3">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Supplier</th>
                    <th>Salesman</th>
                    <th>Order Date</th>
                    <th>Total Amount (₹)</th>
                    <th class="text-center" style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Suppliername</td>
                            <td>@order.Username</td>
                            <td class="text-muted">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="fw-semibold">@order.TotalAmount</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@order.PurchaseOrderId" class="btn btn-sm btn-outline-warning me-1 rounded-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@order.PurchaseOrderId"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this order?');">
                                    <button class="btn btn-sm btn-outline-danger rounded-2">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
