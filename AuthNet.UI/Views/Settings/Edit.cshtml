@using AuthNet.UI.Models.DTO
@model EditCompanyInfoViewModel

@{
    ViewData["Title"] = "Edit Company Info";
}

@section Styles {
    <style>
        .form-card {
            background: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        }
    </style>
}

<h4 class="text-primary mb-4">
    <i class="bi bi-pencil-square me-2"></i> Edit Company Information
</h4>

<div class="form-card">
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4 row align-items-center">
            <label asp-for="Name" class="col-sm-2 col-form-label"><i class="bi bi-building text-primary me-1"></i> Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4 row align-items-center">
            <label asp-for="Address" class="col-sm-2 col-form-label"><i class="bi bi-geo-alt-fill text-danger me-1"></i> Address</label>
            <div class="col-sm-10">
                <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4 row align-items-center">
            <label asp-for="ContactNumber" class="col-sm-2 col-form-label"><i class="bi bi-geo-alt-fill text-danger me-1"></i> Contact No</label>
            <div class="col-sm-10">
                <textarea asp-for="ContactNumber" rows="3" class="form-control"></textarea>
                <span asp-validation-for="ContactNumber" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4 row align-items-center">
            <label asp-for="GSTIN" class="col-sm-2 col-form-label"><i class="bi bi-receipt-cutoff text-warning me-1"></i> GSTIN</label>
            <div class="col-sm-10">
                <input asp-for="GSTIN" class="form-control" />
                <span asp-validation-for="GSTIN" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4 row">
            <label asp-for="LogoUrl" class="col-sm-2 col-form-label"><i class="bi bi-image text-info me-1"></i> Logo</label>
            <div class="col-sm-10">
                <input asp-for="LogoUrl" type="file" class="form-control" />
                <span asp-validation-for="LogoUrl" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4 row">
            <label asp-for="SignatureUrl" class="col-sm-2 col-form-label"><i class="bi bi-pencil text-success me-1"></i> Signature</label>
            <div class="col-sm-10">
                <input asp-for="SignatureUrl" type="file" class="form-control" />
                <span asp-validation-for="SignatureUrl" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
