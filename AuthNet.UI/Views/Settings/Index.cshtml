@using AuthNet.UI.Models.DTO
@model SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<div class="container-fluid">
    <h1 class="h3 mb-1 text-gray-800">Settings</h1>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="nav flex-column nav-pills" id="settings-nav" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="company-tab" data-toggle="pill" href="#company" role="tab">Company Info</a>
                <a class="nav-link" id="tax-tab" data-toggle="pill" href="#tax" role="tab">Tax Settings</a>
                <a class="nav-link" id="template-tab" data-toggle="pill" href="#template" role="tab">Template</a>
                <a class="nav-link" id="users-tab" data-toggle="pill" href="#users" role="tab">User Management</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="tab-content" id="settings-content">
                <!-- Company Info Card -->
                <div class="tab-pane fade show active" id="company" role="tabpanel" aria-labelledby="company-tab">
                    <div class="row justify-content-center">
                        <div class="col-lg-9 mx-auto">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Company Info</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="companyDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="companyDropdown">
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="Edit" asp-route-returnUrl="#company">Edit</a>
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="Add" asp-route-returnUrl="#company">Add</a>
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="History" asp-route-returnUrl="#company">History</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (Model?.Company != null)
                                    {
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4 font-weight-bold">Company Name</dt>
                                            <dd class="col-sm-8">@Model.Company?.Name</dd>
                                            <dt class="col-sm-4 font-weight-bold">Address</dt>
                                            <dd class="col-sm-8">@Model.Company?.Address</dd>
                                            <dt class="col-sm-4 font-weight-bold">Contact</dt>
                                            <dd class="col-sm-8">@Model.Company?.ContactNumber</dd>
                                            <dt class="col-sm-4 font-weight-bold">GSTIN</dt>
                                            <dd class="col-sm-8">@Model.Company?.GSTIN</dd>
                                        </dl>
                                    }
                                    else
                                    {
                                        <p class="mb-0">No company details available.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tax Settings Card -->
                <div class="tab-pane fade" id="tax" role="tabpanel" aria-labelledby="tax-tab">
                    <div class="row justify-content-center">
                        <div class="col-lg-9 mx-auto">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Tax Settings</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="taxDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="taxDropdown">
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="AddTaxSetting" asp-route-returnUrl="#tax">Add</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (Model?.TaxSetting != null)
                                    {
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr><th>CGST</th><th>SGST</th><th>IGST</th><th>Actions</th></tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@Model.TaxSetting.CGST</td>
                                                    <td>@Model.TaxSetting.SGST</td>
                                                    <td>@Model.TaxSetting.IGST</td>
                                                    <td>
                                                        <a asp-controller="Settings" asp-action="EditTaxSetting" asp-route-returnUrl="#tax" class="btn btn-primary btn-sm">Edit</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <p class="mb-0">No tax settings configured.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Template Card -->
                <div class="tab-pane fade" id="template" role="tabpanel" aria-labelledby="template-tab">
                    <div class="row justify-content-center">
                        <div class="col-lg-12 mx-auto">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Template</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="templateDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="templateDropdown">
                                            <a class="dropdown-item" asp-controller="Settings" asp-action="AddTemplate" asp-route-returnUrl="#template">Add Template</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @if (Model?.Template?.InvoiceTemplates?.Any() == true)
                                    {
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr><th>Layout</th><th>Notes</th><th>Terms</th><th>Actions</th></tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var tpl in Model.Template.InvoiceTemplates)
                                                {
                                                    <tr>
                                                        <td>@tpl.Layout</td>
                                                        <td>@tpl.Notes</td>
                                                        <td>@tpl.TermsAndConditions</td>
                                                        <td>
                                                            <a asp-controller="Settings" asp-action="EditTemplate" asp-route-id="@tpl.Id" asp-route-returnUrl="#template" class="btn btn-primary btn-sm">Edit</a>
                                                            |
                                                            <form asp-controller="Settings" asp-action="DeleteTemplate" asp-route-id="@tpl.Id" method="post" style="display:inline;" asp-route-returnUrl="#template" onsubmit="return confirm('Are you sure?');">
                                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <p class="mb-0">No templates available.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Management Card -->
                <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
                    <div class="row justify-content-center">
                        <div class="col-lg-9 mx-auto">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">User Management</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="usersDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="usersDropdown">
                                            <a class="dropdown-item" asp-controller="Profile" asp-action="UpdateProfile" asp-route-returnUrl="#users">Edit Profile</a>
                                            <a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword" asp-route-returnUrl="#users">Change Password</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <ul class="mb-0">
                                        <li><strong>Admin:</strong> Full access</li>
                                        <li><strong>Cashier:</strong> Can bill and view reports</li>
                                        <li><strong>Salesperson:</strong> Limited to sales tasks</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>