@using AuthNet.UI.Models.DTO
@model SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<h4>Settings</h4>

<div class="row">
    <!-- Navigation Pills -->
    <div class="col-md-3">
        <div class="nav flex-column nav-pills" id="settings-tabs" role="tablist" aria-orientation="vertical">
            <button class="nav-link active" id="company-tab" data-bs-toggle="pill" data-bs-target="#company" type="button" role="tab">Company Info</button>
            <button class="nav-link" id="invoice-tab" data-bs-toggle="pill" data-bs-target="#invoice" type="button" role="tab">Invoice Template</button>
            <button class="nav-link" id="tax-tab" data-bs-toggle="pill" data-bs-target="#tax" type="button" role="tab">Tax Settings</button>
            <button class="nav-link" id="user-tab" data-bs-toggle="pill" data-bs-target="#users" type="button" role="tab">User Management</button>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="col-md-9">
        <div class="tab-content" id="settings-content">

            <!-- Company Info -->
            <div class="tab-pane fade show active" id="company" role="tabpanel" aria-labelledby="company-tab">
                <h5>Company Info</h5>
                <a asp-controller="Settings" asp-action="Edit">Edit</a> |
                <a asp-controller="Settings" asp-action="Add">Add</a> |
                <a asp-controller="Settings" asp-action="History">History</a>

                @if (Model?.Company != null)
                {
                    <dl>
                        <dt>Company Name</dt>
                        <dd>@Model.Company?.Name</dd>

                        <dt>Address</dt>
                        <dd>@Model.Company?.Address</dd>

                        <dt>Contact</dt>
                        <dd>@Model.Company?.ContactNumber</dd>

                        <dt>GSTIN</dt>
                        <dd>@Model.Company?.GSTIN</dd>
                    </dl>
                }
                else
                {
                    <p>No company details available.</p>
                }
            </div>

            <!-- Invoice Template -->
            <div class="tab-pane fade" id="invoice" role="tabpanel" aria-labelledby="invoice-tab">
                <h5>Invoice Templates</h5>
                <a asp-controller="Settings" asp-action="AddTemplate">Add Template</a>

                @if (Model?.Template?.InvoiceTemplates?.Any() == true)
                {
                    <table>
                        <thead>
                            <tr><th>Layout</th><th>Notes</th><th>Terms</th><th>Actions</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var tpl in Model.Template.InvoiceTemplates)
                            {
                                <tr>
                                    <td>@tpl.Layout</td>
                                    <td>@tpl.Notes</td>
                                    <td>@tpl.TermsAndConditions</td>
                                    <td>
                                        <a asp-controller="Settings" asp-action="EditTemplate" asp-route-id="@tpl.Id">Edit</a>
                                        |
                                        <form asp-controller="Settings" asp-action="DeleteTemplate" asp-route-id="@tpl.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                            <button type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No templates available.</p>
                }
            </div>

            <!-- Tax Settings -->
            <div class="tab-pane fade" id="tax" role="tabpanel" aria-labelledby="tax-tab">
                <h5>Tax Settings</h5>
                <a asp-controller="Settings" asp-action="AddTaxSetting">Add</a>

                @if (Model?.TaxSetting != null)
                {
                    <table>
                        <thead>
                            <tr><th>CGST</th><th>SGST</th><th>IGST</th><th>Actions</th></tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.TaxSetting.CGST</td>
                                <td>@Model.TaxSetting.SGST</td>
                                <td>@Model.TaxSetting.IGST</td>
                                <td>
                                    <a asp-controller="Settings" asp-action="EditTaxSetting">Edit</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No tax settings configured.</p>
                }
            </div>

            <!-- User Management -->
            <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="user-tab">
                <h5>User Management</h5>
                <ul>
                    <li><strong>Admin:</strong> Full access</li>
                    <li><strong>Cashier:</strong> Can bill and view reports</li>
                    <li><strong>Salesperson:</strong> Limited to sales tasks</li>
                </ul>

                <h6>Account</h6>
                <a asp-controller="Profile" asp-action="UpdateProfile">Edit Profile</a> |
                <a asp-controller="Profile" asp-action="ChangePassword">Change Password</a>
            </div>

        </div>
    </div>
</div>
