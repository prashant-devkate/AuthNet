@model List<AuthNet.UI.Models.DTO.UiTemplateVm>

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Templates</h6>
                <a asp-controller="Templates" asp-action="Add" class="d-none d-sm-inline-block btn btn-primary btn-icon-split btn-sm shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus-circle"></i>
                    </span>
                    <span class="text">Add Template</span>
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Layout</th>
                                    <th>Notes</th>
                                    <th>Terms & Conditions</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Layout</td>
                                        <td>@item.Notes</td>
                                        <td>@item.TermsAndConditions</td>
                                        <td class="text-center">
                                            <a asp-controller="Templates" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-icon-split btn-sm me-1">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </span>
                                            </a>
                                            <form asp-controller="Templates" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this template?');">
                                                <button class="btn btn-danger btn-icon-split btn-sm">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-trash"></i>
                                                    </span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="mb-0 text-center text-muted py-4">
                        <i class="fas fa-info-circle me-2"></i>No templates found.
                    </p>
                }
            </div>
        </div>
    </div>
</div>