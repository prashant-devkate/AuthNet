@model IEnumerable<AuthNet.UI.Models.DTO.SupplierDto>
@{
    ViewData["Title"] = "Suppliers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary mb-0">
        <i class="bi bi-truck me-2"></i> Suppliers
    </h3>
    <a asp-controller="Suppliers" asp-action="Add" class="btn btn-primary rounded-3">
        <i class="bi bi-plus-circle me-1"></i> Add Supplier
    </a>
</div>

<div class="card shadow-sm p-3">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Company Name</th>
                    <th>Contact Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th class="text-center" style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@s.CompanyName</td>
                            <td class="text-muted">@s.ContactName</td>
                            <td class="text-muted">@s.Phone</td>
                            <td class="text-muted">@s.Address</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@s.SupplierId" class="btn btn-sm btn-outline-warning me-1 rounded-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@s.SupplierId"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this supplier?');">
                                    <button class="btn btn-sm btn-outline-danger rounded-2">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-info-circle me-2"></i>No suppliers found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
