@model IEnumerable<AuthNet.UI.Models.DTO.SupplierDto>

@{
    ViewData["Title"] = "Suppliers";
}

<style>
    :root {
        --primary-color: #1e3a8a;
        --accent-color: #f59e0b;
        --danger-color: #ef4444;
        --bg-light: #f9fafb;
        --text-muted: #6b7280;
        --hover-light: rgba(30, 58, 138, 0.05);
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        overflow-x: auto;
    }

    .section-title {
        font-weight: 800;
        font-size: 2.5rem;
        color: var(--primary-color);
    }

    .btn-add {
        background-color: var(--primary-color);
        color: white;
        padding: 0.6rem 1.5rem;
        border: none;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        font-weight: 600;
    }

        .btn-add:hover {
            background-color: #172554;
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.25);
            transform: translateY(-2px);
        }

    .table th,
    .table td {
        vertical-align: middle;
        border: none;
        padding: 1rem;
    }

    .table thead tr {
        border-bottom: 2px solid #e5e7eb;
    }

    .table-hover tbody tr:hover {
        background-color: var(--hover-light);
    }

    .btn-action {
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        border-radius: 0.375rem;
        font-weight: 500;
    }

    .btn-warning {
        background-color: var(--accent-color);
        color: white;
        border: none;
    }

        .btn-warning:hover {
            background-color: #d97706;
        }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
        }

    .btn-info {
        background-color: #0ea5e9;
        color: white;
        border: none;
    }

        .btn-info:hover {
            background-color: #0284c7;
        }

    .badge-code {
        font-size: 0.85rem;
        padding: 0.4rem 0.6rem;
        background-color: #e5e7eb;
        border-radius: 0.375rem;
        font-weight: 500;
        color: var(--text-muted);
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title">Suppliers</h1>
        <a class="btn btn-add" asp-controller="Suppliers" asp-action="Add">
            <i class="bi bi-plus-circle me-2"></i> Add Supplier
        </a>
    </div>

    <div class="glass-card p-4">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr class="text-uppercase small text-muted">
                    <th>Company Name</th>
                    <th>Contact Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td class="fw-semibold">@supplier.CompanyName</td>
                        <td class="text-secondary">@supplier.ContactName</td>
                        <td class="text-secondary">@supplier.Phone</td>
                        <td class="text-secondary">@supplier.Address</td>

                        <td class="d-flex gap-2 justify-content-center">
                            <a asp-controller="Suppliers" asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning btn-action">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>

                            <form asp-controller="Suppliers" asp-action="Delete" asp-route-id="@supplier.SupplierId" method="post" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
                                <button type="submit" class="btn btn-danger btn-action">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
