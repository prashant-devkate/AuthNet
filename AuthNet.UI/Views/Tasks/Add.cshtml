@using AuthNet.UI.Models.DTO
@model AddTaskItemViewModel

@{
    ViewData["Title"] = "Add Task";
}

<div class="container py-4" style="max-width:540px">
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <h4 class="text-center text-primary fw-semibold mb-3">
                <i class="bi bi-clipboard-plus me-1"></i> Add Task
            </h4>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <form method="post" id="taskForm">
                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" placeholder="Task Title" />
                    <label asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="DueDate" type="date" class="form-control" placeholder="Due Date" />
                    <label asp-for="DueDate"></label>
                    <span asp-validation-for="DueDate" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4">Reset</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
