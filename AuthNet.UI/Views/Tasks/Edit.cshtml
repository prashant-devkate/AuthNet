@model AuthNet.UI.Models.DTO.EditTaskItemViewModel

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container py-4" style="max-width:540px">
    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <h4 class="text-center text-primary fw-semibold mb-3">
                <i class="bi bi-pencil-square me-1"></i> Edit Task
            </h4>

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            @if (Model != null)
            {
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TaskId" />

                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Title" />
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="DueDate" type="date" class="form-control" placeholder="Due Date" />
                        <label asp-for="DueDate"></label>
                        <span asp-validation-for="DueDate" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button class="btn btn-primary px-4" type="submit">
                            <i class="bi bi-save-fill me-1"></i> Save
                        </button>
                        <button type="reset" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-repeat me-1"></i> Reset
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
