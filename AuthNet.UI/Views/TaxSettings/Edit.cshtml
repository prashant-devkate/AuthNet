@model AuthNet.UI.Models.DTO.EditTaxSettingViewModel
@{
    ViewData["Title"] = "Edit Tax Settings";
}

<!-- Optional: keep page light-weight -->
<style>
    .form-wrapper {
        max-width: 500px;
    }
</style>

@if (Model != null)
{
    <div class="container py-5">
        <div class="card shadow-lg border-0 form-wrapper mx-auto">
            <div class="card-body p-4">
                <h3 class="text-center fw-semibold mb-4">
                    <i class="bi bi-percent me-2 text-primary"></i>
                    Edit Tax Settings
                </h3>

                <form asp-action="EditTaxSetting" method="post" novalidate>
                    <input asp-for="Id" type="hidden" />

                    <div class="form-floating mb-3">
                        <input asp-for="CGST" class="form-control" placeholder="CGST" />
                        <label asp-for="CGST">CGST&nbsp;(%)</label>
                        <span asp-validation-for="CGST" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="SGST" class="form-control" placeholder="SGST" />
                        <label asp-for="SGST">SGST&nbsp;(%)</label>
                        <span asp-validation-for="SGST" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="IGST" class="form-control" placeholder="IGST" />
                        <label asp-for="IGST">IGST&nbsp;(%)</label>
                        <span asp-validation-for="IGST" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Save
                        </button>

                        <button type="reset" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-repeat me-1"></i> Reset
                        </button>

                        <a asp-controller="Settings" asp-action="Index"
                           class="btn btn-link text-decoration-none px-3">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
