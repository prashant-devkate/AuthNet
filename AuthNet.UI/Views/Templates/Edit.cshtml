@model AuthNet.UI.Models.DTO.EditInvoiceTemplateViewModel
@{
    ViewData["Title"] = "Edit Invoice Template";
}

<!-- keep card width reasonable -->
<style>
    .form-wrapper {
        max-width: 540px
    }
</style>

@if (Model != null)
{
    <div class="container py-5">
        <div class="card shadow-lg border-0 mx-auto form-wrapper">
            <div class="card-body p-4">
                <h3 class="text-center fw-semibold mb-4">
                    <i class="bi bi-file-earmark-text me-2 text-primary"></i>
                    Edit Invoice Template
                </h3>

                <form asp-action="EditTemplate" method="post" novalidate>
                    <input asp-for="Id" type="hidden" />

                    <div class="form-floating mb-3">
                        <input asp-for="Layout" class="form-control" placeholder="Layout" />
                        <label asp-for="Layout">Layout Name</label>
                        <span asp-validation-for="Layout" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Notes" class="form-control" placeholder="Notes" />
                        <label asp-for="Notes">Notes</label>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="TermsAndConditions" class="form-control" placeholder="Terms &amp; Conditions" />
                        <label asp-for="TermsAndConditions">Terms &amp; Conditions</label>
                        <span asp-validation-for="TermsAndConditions" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Save
                        </button>

                        <button type="reset" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-repeat me-1"></i> Reset
                        </button>

                        <a asp-controller="Settings" asp-action="Index" class="btn btn-link text-decoration-none px-3">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
